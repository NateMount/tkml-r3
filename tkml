#! /usr/bin/env python3.10

import os, sys

import yaml
from tkinter import *

from src import _warn, _help, _render, _run


def main() -> None:
	"""Main"""
	if len(sys.argv) == 1 or '--help' in sys.argv:
		_help()

	if 'run' in sys.argv:
		_run(sys.argv[1])
	
	if 'render' in sys.argv:
		_render(sys.argv[1])

	else:
		_help()



if __name__ == '__main__':
	main()
